<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/red">

    <ImageView android:layout_width="@dimen/image_width"
               android:layout_height="@dimen/image_height"
               android:background="@color/blue"

               android:src="@drawable/angry_cat"
               android:scaleType="fitXY"
            />

    <ImageView android:layout_width="@dimen/image_large_width"
               android:layout_height="@dimen/image_large_height"
               android:background="@color/green"

               android:src="@drawable/angry_cat"
               android:scaleType="fitXY"
            />

    <Button android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_margin="@dimen/margin_big"
            android:padding="@dimen/padding_standard"

            android:text="@string/back"
            android:textSize="@dimen/text_size"
            android:textColor="@color/blue"
            android:textStyle="bold"/>

</LinearLayout>